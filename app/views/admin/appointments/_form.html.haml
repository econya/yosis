= form_for [:admin, @appointment], builder: BulmaFormBuilder::FormBuilder do |f|
  - if @appointment.errors.any?
    #error_explanation
      %h2
        = t("errors.prohibited_from_saving", count: @appointment.errors.count)
      %ul
        - @appointment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date_from
    = f.datetime_select :date_from, { minute_step: 5 }
  .field
    = f.label :date_to
    = f.datetime_select :date_to, { minute_step: 5 }
  -#.field
  -#  = f.label :lessons
  -#  = f.text_field :lessons
  .field
    = f.label :notice
    = f.text_field :notice
  .field
    = f.label :info
    = f.text_field :info
  .field
    = f.label :style
    = f.collection_select :style, Course.all, :id, :name, prompt: t('Select Style')
  .field
    = f.label :link
    = f.text_field :link
  .actions
    = f.submit 'Save', class: 'button is-link is-outlined'
