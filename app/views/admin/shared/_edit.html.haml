.level
  .level-left
    .level-item
      %h1.title
        = edit_title
  .level-right
    .level-item
      = link_to back_target,
        class: 'button is-danger is-outlined is-small' do
        = t('actions.show-all')

= yield

%br.is-clearfix
%hr

= link_to back_url_or(back_target),
  class: 'button is-danger is-outlined is-small' do
  %span.icon
    %i.fa.fa-arrow-left
  %span
    = t('actions.Back')
