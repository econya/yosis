= form_for [:admin, @style], builder: BulmaFormBuilder::FormBuilder do |f|
  - if @style.errors.any?
    #error_explanation
      %h2= "#{pluralize(@style.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @style.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  -#.field
  -#  = f.label :start_date
  -#  = f.date_field :start_date
  .field
    = f.label :doodle
    = f.file_field :doodle, direct_upload: true
  .field
    = f.label :image
    = f.file_field :image, direct_upload: true
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save', class: 'button'
