%table.table.is-fullwidth
  %thead
    %tr
      %th= Place.human_attribute_name :name
      %th= Place.human_attribute_name :building_name
      %th= Place.human_attribute_name :note
      -# i18n-tasks-use t('activerecord.attributes.place.pricing_note')
      %th= Place.human_attribute_name :pricing_note
      -# i18n-tasks-use t('activerecord.attributes.place.address')
      %th= Place.human_attribute_name :address
      %th
      %th

  %tbody
    - places.each do |place|
      %tr
        %td= place.name
        %td= place.building_name
        %td= place.note
        %td= place.pricing_note
        %td= place.address
        %td
          = link_to t('actions.edit'), edit_admin_place_path(place), class: 'button is-small'
        %td
          = link_to t('actions.Destroy'), [:admin, place],
            method: :delete, data: { confirm: t('actions.are_you_sure?') },
            class: 'button is-small is-danger'

%br

