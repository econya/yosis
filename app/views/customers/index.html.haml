%h1.title Listing customers

%table.table.is-striped.is-fullwidth
  %thead
    %tr
      %th First name
      %th Last name
      %th Birthyear
      %th Avatar
      %th Contact
      %th
      %th
      %th

  %tbody
    - @customers.each do |customer|
      %tr
        %td= customer.first_name
        %td= customer.last_name
        %td= customer.birthyear
        %td= customer.avatar
        %td= customer.contact
        %td= link_to 'Show', customer
        %td= link_to 'Edit', edit_customer_path(customer)
        %td= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Customer', new_customer_path, class: 'button is-info'
