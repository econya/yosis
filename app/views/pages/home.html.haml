%h1.title.is-1.has-text-centered
  = t('home.welcome')

.columns
  .column.is-two-third
    %h2.subtitle
      -#= t('intro')
      = SiteSetting['intro']
      = link_to t('home.intro.learn_more'), root_path
%section#next_appointments
  %h2.title.is-4
    = t('home.next_appointments')
  = render 'appointments'
  - if user_admin?
    = link_to ('home.appointment.new'), new_admin_appointment_path, class: 'button is-link'

%br
%br

%section.courses-links
  %h2.title.is-4
    = t('courses')
%br
.columns.is-multiline
  - @courses.each do |course|
    .column.is-2
      = link_to course.name, "#course#{course.id}", class: 'button is-big'
  - if @courses.empty?
    = t('home.courses.none_yet')

%section.videos
  %h2.title.is-4= t('videos')
%hr
- @courses.each do |course|
  = render partial: 'course_video_row', locals: { course: course }

