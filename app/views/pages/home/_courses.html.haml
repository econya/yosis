.container
  .doodle.has-text-centered.pt-3
    = image_tag 'kurse.png', class: 'round'
    %h2.title.is-3.pt-3
      = t('home.courses.courses-title')
    .subtitle
      = t('home.courses.subtitle')

  #course_by_style.has-text-centered.pt-4.mt-6
    %h3.title.is-4.pb-5
      = t('home.courses.styles')
    .columns.is-multiline.is-vcentered.is-centered.is-variable.is-8
      -# TODO extract to controller
      - @styles.which_has_courses.each do |style|
        .column.is-3.style-column{id: dom_id(style)}
          = admin_edit_button edit_admin_style_path(style)
          .box.pt-0.px-0
            - if style.image.attached?
              = image_tag style.image.variant(resize_to_fill: [354,200]).processed
              -#alt: t('video.style_alt', style: 'test-style')
            - else
              = image_tag 'blog.png', class: 'round'
            .px-5
              %b
                = style.name
              %br
              %small
                = style.description

  #all_courses.has-text-centered.mt-6.pt-6
    %h3.title.is-4.mb-6
      = t('home.courses.all-courses-title')
  #all_courses_details
    = render partial: 'pages/home/courses/all_courses'

