- @styles.active.each do |style|
  %h3.title.is-5
    = admin_edit_button edit_admin_style_path(style)
    = style.name
  - if style.doodle.attached?
    = image_tag style.doodle&.variant(resize_to_fill: [240, 240])&.processed
