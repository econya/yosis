.container
  .doodle.has-text-centered.pt-6.mb-6
    = image_tag 'videos.png', class: 'round'
    %h2.title.is-3.pt-3
      = t('home.videos.title')
    .subtitle
      = t('home.videos.subtitle')

  -#%strong
  -#  = t('home.video_explanation1')
  -#= t('home.video_explanation2')
  = render partial: 'pages/home/login_row'

  -#= admin_edit_button edit_admin_style_path(style)

  #video-styles.mt-6.pt-6
    - @styles.each do |style|
      = render partial: 'course_video_row', locals: { style: style }
    - if @styles.empty?
      = t('home.courses.none_yet')

- @styles.active.each do |style|
  %h3.title.is-5
    = admin_edit_button edit_admin_style_path(style)
    = style.name
  - if style.doodle.attached?
    = image_tag style.doodle&.variant(resize_to_fill: [240, 240])&.processed
