    = render 'navbar'
    .main-section
      %section.hero.is-info.is-fullheight-with-navbar#hero-section
        .hero-head
          .container
            = render 'flashs'
            = yield
        .hero-body
        .hero-foot
          %footer.footer
            .content.has-text-centered
              %p
                %strong
                  yogamitveronique.de
                = link_to t('navigation.pages.impressum'), impressum_path
